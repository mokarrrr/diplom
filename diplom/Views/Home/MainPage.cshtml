
@{
    ViewData["Title"] = "MainPage";
}
@{
     List<Product> Products = MainContext.Instantce.Product.ToList();
}

<link rel="stylesheet" href="~/css/mainwindow.css" />
<body>
    <div class="Main">
        <header class="_header">
            <div class="logo">
                <a href="#" class="company-name">Dairy Delights Emporium</a>
            </div>
            <div class="mogo">
                <a href="#"><img src="~/img/Group 84(1).png" style="height:180px;width:180px;margin-top:-5px" /></a>
            </div>

        </header>

        <div class="main_body">
            <div class="container1">
                <div class="search_bar">
                 <input type="search" placeholder="Искать в магазине" class="search-bar">
                 </div>
                <p class="title">каталог</p>
            </div>
            <div class="container2">
                <label class="count_product">@Products.Count товаров</label>
            </div>
        </div>

            @foreach (Product item in Products)
            {
            <div class="container3">
                <div class="card">
                    <a href="https://localhost:7038/Home/MainPage/Item?id=@item.product_article">
                        <div class="card-image">

                            <img class="img" src="@item.product_img" />
                        </div>
                    </a>

                    <div class="card-body">
                        <h2 class="card-title">@item.Name_product</h2>
                        <p>@item.product_description_</p>
                        <a class="btn btn-purple" href="">Go to Science</a>
                    </div>
                </div>
            </div>    
            }

        </div>
            
</body>

