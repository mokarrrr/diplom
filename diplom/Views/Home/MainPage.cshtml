
@{
    ViewData["Title"] = "MainPage";
    <meta name="viewport" content="width=device-width, initial-scale=0.30" />
}
@{
     List<Product> Products = MainContext.Instantce.Product.ToList();
}

<link rel="stylesheet" href="~/css/mainwindow.css" />
